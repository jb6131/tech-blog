<div class="container-fluid">
  <div class="border border-secondary rounded mx-3 my-5 pt-4 px-4">
    <h2 class="pb-2">{{post.title}}</h2>
    <p>
      {{post.content}}
    </p>
    <p class="font-italic text-right">Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{#each comments as |comment|}}
<div class="container-fluid">
  <div class="border border-secondary rounded mx-3 my-5 pt-4 px-4">
    <p>{{comment.content}}</p>
    <p class="font-italic text-right">Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
  </div>
</div>
{{/each}}
<div class="container-fluid">
  <div class="border border-secondary rounded mx-3 my-5 pt-4 px-4">
    <form class="new-comment-form">
      <div class="form-group">
        <label for="comment-content">Comment:</label>
        <input type="text" class="form-control" id="comment-content">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/newcomment.js"></script>