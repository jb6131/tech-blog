<div class="container-fluid">
  <h2 class="mt-3 ml-2">Welcome, {{username}}!</h2>
</div>

<div class="container-fluid">
  {{#if posts.length}}
  {{#each posts as |post|}}
  <div class="border border-secondary rounded mx-3 my-5 pt-4 px-4">
    <h2 class="pb-2">{{post.title}}</h2>
    <p>
      {{post.content}}
    </p>
    <p class="font-italic text-right">Created on {{post.date_created}}</p>
  </div>
  {{/each}}
  {{/if}}


  <a class="btn btn-primary m-2" href="/newpost">+ New Post</a>
</div>