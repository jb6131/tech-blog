<div class="container-fluid">
  <h1 class="mt-4 ml-3">Welcome, {{username}}!</h1>
</div>

<div class="container-fluid">
  {{#if posts.length}}
  {{#each posts as |post|}}
  <div class="border border-secondary rounded mx-3 my-5 pt-4 px-4">
    <h2>{{post.title}} <a href="/edit/{{post.id}}">(edit)</a></h2>
    <p>
      {{post.content}}
    </p>
    <p class="font-italic text-right">Created on {{format_date post.date_created}}</p>
  </div>
  {{/each}}
  {{/if}}


  <a class="btn btn-primary m-3" href="/newpost">+ New Post</a>
</div>

<script src="./js/deletepost.js"></script>